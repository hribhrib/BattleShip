<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group5.battleship">
    //For wifi connection needed
    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".src.views.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".src.views.GameActivity2"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".src.views.GameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".src.views.HighScoresActivity"
            android:label="BattleShip"
            android:screenOrientation="portrait" />
        <activity
            android:name=".src.views.SetShipsActivity2"
            android:label="BattleShip"
            android:screenOrientation="portrait" />
        <activity
            android:name=".src.views.SetShipsActivity"
            android:label="BattleShip"
            android:screenOrientation="portrait" />
        <activity
        android:name=".src.views.WifiManagerActivity"
        android:label="BattleShip"
        android:screenOrientation="portrait" />
        <activity
            android:name=".src.views.InfoActivity"
            android:label="BattleShip"
            android:screenOrientation="portrait" />
        <activity
            android:name=".src.views.PreferencesActivity"
            android:label="BattleShip"
            android:screenOrientation="portrait" />
        <activity
            android:name=".src.views.InfoActivity"
            android:label="BattleShip"
            android:screenOrientation="portrait" />


    </application>

</manifest>